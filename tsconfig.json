{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "outDir": "./js",
        "rootDir": "./ts",
        "noImplicitAny": false,
        "paths": {
            // This is solely to stop a bug with @types/node as of 12/15/2023
            // read more: https://github.com/DefinitelyTyped/DefinitelyTyped/discussions/67406
            "undici-types": ["./node_modules/undici-types/index.d.ts"]
        }
    },
    "include": ["ts/**/*.ts"]
}
